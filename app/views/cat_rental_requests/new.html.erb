<form class="" action="<%= cat_rental_requests_url %>" method="post">
  <label for="cats">Cats: </label>
  <select id="cats" name="cat_rental_request[cat_id]">
    <% Cat.all.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>
  <br>

  <label for="start_date">Start Date: </label>
  <input type="date" name="cat_rental_request[start_date]">
  <br>

  <label for="end_date">End Date: </label>
  <input type="date" name="cat_rental_request[end_date]">
  <br>

  <input type="submit" value="Submit Rental!">
</form>
